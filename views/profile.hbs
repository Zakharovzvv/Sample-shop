<h1>Profile</h1>
<div class="row">

    <div class="col s6">
        {{#if user.avatarUrl}}
            <figure>
                <img src="/{{user.avatarUrl}}"
                     alt="Avatar">
                <figcaption>avatar-{{user.name}}</figcaption>
            </figure>
        {{else}}
            <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="post" novalidate enctype="multipart/form-data">
            <p>Email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required
                       placeholder="Ivan" value="{{user.name}}">
                <label for="name">Name</label>
                <span class="helper-text" data-error="Please, input your name"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn btn-primary" type="submit">Update</button>
        </form>
    </div>

</div>


