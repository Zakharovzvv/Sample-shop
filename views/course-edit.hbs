<h1>Edit course</h1>
{{# if editError}}
    <div class="error-notify">{{editError}}</div>
{{/if}}
<form action="/courses/edit" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Please, input course name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please, input course price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="url" type="text" class="validate" required value="{{course.url}}">
        <label for="img">URL</label>
        <span class="helper-text" data-error="Please, input course URL"></span>
    </div>
    <input type="text"  name="id" value="{{course._id}}" hidden>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
<form action="/courses/remove" method="POST" class="form-remove">
    <input type="hidden" name="id" value="{{ course._id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Remove course</button>
</form>
